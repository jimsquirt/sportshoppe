	<div class="container-fluid">
      <div class="row-fluid">
		<%= render :partial => "shared/sidebar" %>

		<div class = "span9">
			<h3>Product List</h3>
			<%= form_tag products_public_products_path, :method => 'get' , :id => "products_search", :class => "pull-right", :style => "margin-bottom:10px" do %>
			  <%= hidden_field_tag :direction, params[:direction] %>
			  <%= hidden_field_tag :sort, params[:sort] %>
			  <%= text_field_tag :search, params[:search], :class =>"input-inline-level", :placeholder =>"Search here..."  %>
			  <%= submit_tag "Search", :name => nil, :class =>"btn btn-small btn-success", :style => "margin-top:-10px" %>
			<% end %>
			<table class ="table table-striped table-bordered table-condensed">
			<tr>
				<th>Product</th>
				<th>Price</th>
				<th>Quality</th>
				<th>Description</th>
				<th>Shop</th>
			</tr>

			<% @products.each do |product| %>
			<tr>
			    <td><%= link_to product.name, product %></td>
			    <td><%= number_to_currency(product.price, :unit => "Php") %></td>
			    <td><%= product.quality %></td>
			    <td><%= product.description %></td>
			    <td><%= link_to product.user.email, product.user %></td>
			 </tr>			  
			 <% end %>


			</table>
</div>
</div>
</div>